{
  "compilerOptions": {
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "strict": true,
    "target": "es6",
    "lib": [
      "ES5",
      "ES6",
      "ESNext",
      "DOM"
    ],
    "skipLibCheck": true,
    "types": ["node", "jest"],
    "baseUrl": ".",
    "forceConsistentCasingInFileNames": true,
    "module": "esnext",
    "isolatedModules": false,
    "outDir": "dist",
    "paths": {
      "~/*": [
        "*"
      ],
      "@/*": [
        "src/*"
      ]
    },
    "typeRoots": [
      "@types/"
    ]
  },
  "include": [
    "**/*.ts",
    "node_modules/@types/jest/index.d.ts",
  ],
  "exclude": [
    "node_modules"
  ]
}
